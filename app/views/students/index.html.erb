<h3>详情列表页</h3>
<br>

<table cellspacing='20'>
  <tr align='center'>
    <td>序号</td>
    <td>姓名</td>
    <td>性别</td>
    <td>爱好</td>
    <td>自我评价</td>
    <td>星座</td>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <!--将数据库中的布尔类型转变为字符串男和女-->
      <% if (student.sex==true)
           @sex='男'
           else
             @sex='女' end %>
      <td><%= student.id %></td>
      <td><%= student.name %></td>
      <td><%= @sex %></td>
      <td><%= student.hobby %></td>
      <td><%= student.evaluation %></td>
      <td><%= student.constellation %></td>
    </tr>
  <% end %>

</table>
<br>
<a href='/students/new'><input type='submit' value='新增'/></a>
